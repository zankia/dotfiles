# Start i3bar to display a workspace bar (plus the system information i3status if available)
bar {
    output eDP1
    output eDP-1
    output eDP-1-1
    output DP-0
    output DP-1
    output HDMI-1
    output HDMI-0
    output HDMI-1-1
    output HDMI-A-1
    output DisplayPort-0
    position top
    #font pango:mononoki 16
    status_command ~/bin/customstatus
    #i3bar_command i3bar --transparency
    tray_output primary
    colors {
        background #1C1C1CE5
        focused_workspace  $c_main      $c_main         $c_white
        active_workspace   $c_main      $c_second       $c_gray
        inactive_workspace $c_second    $c_second       $c_gray
        urgent_workspace   $c_important $c_important    $c_white
    }
}

bar {
    output HDMI1
    output DP1
    output DP-2
    output DP-1-1
    output DVI-D-0
    output DVI-D-1
    output DisplayPort-1
    position top
    status_command while(true) do date +'%T %A %d %B %Y'; sleep 1; done
    #i3bar_command i3bar --transparency
    colors {
        background #1C1C1CC5
        focused_workspace  $c_main      $c_main         $c_white
        active_workspace   $c_main      $c_second       $c_gray
        inactive_workspace $c_second    $c_second       $c_gray
        urgent_workspace   $c_important $c_important    $c_white
    }
}


# Theme colors
# class                   border        background      text       child_border
client.focused            $c_main       $c_main         $c_white    $c_main
client.focused_inactive   $c_main       $c_second       $c_gray     $c_second
client.unfocused          $c_second     $c_second       $c_gray     $c_second
client.urgent             $c_important  $c_important    $c_white    $c_important

# Keyboard
